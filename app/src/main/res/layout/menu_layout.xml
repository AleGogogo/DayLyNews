<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="360dp"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--这个高度怎么设置-->
    <LinearLayout
        android:id="@+id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolBarBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_account_circle_white_24dp"/>

            <TextView
                android:id="@+id/id_menu_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/menu_account"
                android:textColor="@color/colorAccount_white"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_menu_myCollection_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_star_white_24dp"
                android:gravity="center"
                android:text="@string/menu_myCollection"
                android:textColor="@color/colorAccount_white"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/id_menu_offlinedownload_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_file_download_white_24dp"
                android:gravity="center"
                android:text="@string/menu_offonlinedownload"
                android:textColor="@color/colorAccount_white"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/id_menu_main_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMenuBackGround"
        android:padding="10dp"
        android:paddingLeft="80dp"
        android:text="首页"
        android:textColor="@color/colorToolBarBackground"
        android:textSize="18sp"
        />
    <ListView
        android:id="@+id/id_menu_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccount_white"
        android:scrollbars="none"
        android:divider="@color/transparent">

    </ListView>
</LinearLayout>
