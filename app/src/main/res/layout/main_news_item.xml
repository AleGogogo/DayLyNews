<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_news_item"
    >
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:background="@drawable/item_seleor_background_light"
    >
    <TextView
        android:id="@+id/id_newsitem_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="今日热闻"
        android:textColor="@color/light_news_topic"
        android:textSize="13sp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/id_main_newsitem_iv_title"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/id_main_newsitem_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="如何看待当下这种越来越普遍的“沉默”人格？"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/id_main_newsitem_iv_title"
            />

    </RelativeLayout>
</FrameLayout>
</LinearLayout>